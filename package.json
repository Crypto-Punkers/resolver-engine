{
  "private": true,
  "workspaces": [
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "tsc -b tsproject.json",
    "build:core": "tsc -p packages/core/tsconfig.json",
    "build:fs": "tsc -p packages/fs/tsconfig.json",
    "build:imports": "tsc -p packages/imports/tsconfig.json",
    "build:imports-fs": "tsc -p packages/imports-fs/tsconfig.json",
    "watch": "tsc -b --watch tsproject.json",
    "clean": "wsrun --exclude-missing clean",
    "test": "wsrun -p tests --stages test",
    "prettier": "prettier --config .prettierrc.yaml --write --list-different './**/*.{ts,tsx,json,md}'"
  },
  "devDependencies": {
    "@types/debug": "^0.0.31",
    "@types/node": "^10.12.18",
    "@types/request": "^2.47.0",
    "lerna": "^3.10.7",
    "prettier": "1.16.2",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.4",
    "wsrun": "^3.6.2"
  },
  "name": "resolver-engine"
}
