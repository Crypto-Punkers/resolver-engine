{
  "private": true,
  "workspaces": [
    "packages/*",
    "tests"
  ],
  "scripts": {
    "build": "tsc -b tsproject.json",
    "watch": "tsc -b --watch",
    "clean": "wsrun --exclude-missing clean",
    "test": "yarn workspace tests test",
    "prettier": "prettier --config .prettierrc.yaml --write --list-different './**/*.{ts,tsx,json,md}'"
  },
  "devDependencies": {
    "prettier": "1.16.1",
    "wsrun": "^3.6.2"
  }
}
