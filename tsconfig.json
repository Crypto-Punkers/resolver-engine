{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    "test/__tests__/MockedFs.ts",
    "test/__tests__/resolvers/MockedFs.ts",
    "test/__tests__/parsers/UrlParser.spec.ts"
  ]
}
