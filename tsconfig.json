{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // "lib": [
    //   "es6",
    //   "dom",
    // ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"]
}
